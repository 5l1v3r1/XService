{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/XService.Driver/XService.Driver.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/XService.Driver/XService.Driver.csproj",
                "-c",
                "Release"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/XService.Driver/XService.Driver.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "Install dotnet-format",
            "command": "dotnet",
            "type": "process",
            "args": [
                "tool",
                "install",
                "dotnet-format",
                "-g"
            ]
        },
        {
            "label": "Format",
            "command": "dotnet-format",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}